<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linearMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgInfinity"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_infinity"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/imgHappy"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_happy"
            app:tint="@color/white"/>

        <ImageView
            android:id="@+id/imgSunn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_sunny"
            app:tint="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearMenu"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="Ola, Renan!"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Não sabendo que era impossível, foi lá e fez"/>

    <View
        android:layout_width="128dp"
        android:layout_height="2dp"
        android:layout_below="@+id/txtStatus"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnNewPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ripple_button"
        android:paddingVertical="10dp"
        android:paddingHorizontal="25dp"
        android:textColor="@color/white"
        android:text="NOVA FRASE"/>
</RelativeLayout>